lp = :loop_industrial
sd = sample_duration lp
load_sample :drum_heavy_kick

define :drums do
#  sample :drum_heavy_kick, rate: 0.75
  s =  choose sample_names :ambi
  sample s if rand < 0.5
  sleep sd


end

define :synths do
  use_synth :fm
  with_fx :echo do 
  sample :ambi_choir, rate: 0.4, start: 0.3, finish: rrand(0, 0.5)
  end
  sleep sd

end

in_thread(name: :drums){loop{drums}}
in_thread(name: :synths){loop{synths}}
 