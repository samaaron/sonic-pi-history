
load_sample :drum_heavy_kick

define :drums do
  sample :drum_heavy_kick, rate: 0.75
  sleep 0.5
  sample :drum_heavy_kick
  sleep 0.5
end

define :synths do
  use_synth :dsaw
  use_synth_defaults amp: 1, mod_range: 12, attack: 0.03, release: 0.26, cutoff: 70, pulse_width: 0.02, mod_rate: 4
  play chord(:e3, :minor).choose, cutoff: rrand(60, 120), release: 0.1
  sleep 0.125
end

in_thread(name: :drums){loop{drums}}
in_thread(name: :synths){loop{synths}}
 