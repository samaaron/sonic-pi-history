use_synth :dsaw

define :rhythm do
  use_synth_defaults attack: 0, release: 0.1
  play_pattern_timed [50, 55, 57], [0.25, 0.125, 0.25]
end

define :drums do
  sample :drum_heavy_kick
  sleep 0.5
end

in_thread(name: :loop_rhyth) do
  loop do
    rhythm
  end
end

in_thread(name: :loop_drums) do
  loop do
    drums
  end
end