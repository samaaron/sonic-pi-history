
use_synth :prophet
use_bpm 60
rate = 0.7
rate_mul = 1.0 / rate
with_fx :reverb do
  use_synth_defaults release: 0.4
  use_transpose 12
  
    loop do
      play chord([:b1, :b2, :e1, :e2, :b3, :e3].choose, :minor).choose, cutoff: rrand(40, 100), amp: 0.5, attack: 0
      sleep [0.5, 0.5, 0.5, 1, 1].choose * rate_mul
    end
end