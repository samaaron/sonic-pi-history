use_synth_defaults amp: 0.8, attack: 0.02, sustain: 0, release: 0.12
use_transpose -5
use_synth :dsaw
use_bpm 120
with_fx :reverb, room: 0.4 do
  with_synth :zawa do
    play 30 + 12, release: 10, amp: 0.1, cutoff: 90
  end
  loop do
    in_thread do

      play_pattern_timed [30, 45, 78, 90, 73], [0.25, 0.5, 0.333]
    end
    sleep 0.1
    play_pattern_timed [30, 45, 78, 90, 73], [0.25, 0.5, 0.333]
  end
end