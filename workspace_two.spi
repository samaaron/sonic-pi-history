in_thread(name: :drums) do
  with_fx :reverb do
    loop do
      sample :drum_heavy_kick
      sleep 0.5
      sample :drum_cymbal_closed
      sleep 0.5
    end
  end
end

in_thread(name: :v) do
  with_fx :ixi_techno, rate_slide: 1 do |r|

    define :rrr3 do
      r
    end
    use_synth :sound_in
    p = play sustain: 100, amp: 0.1
    define :voice do
      p
    end
  end
end