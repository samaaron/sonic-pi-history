in_thread(name: :drums) do
  with_fx :reverb do
    loop do
      sample :drum_heavy_kick
      sleep 0.5
      sample :drum_cymbal_closed
      sleep 0.5
    end
  end
end

in_thread(name: :v) do
  with_fx :ixi_techno, rate_slide: 1 do |r|

    
    use_synth :sound_in
    p = play sustain: 1000, amp: 0
    
    define :voice do
      p
    end
    
    define :rrr3 do
      r
    end
  end
end

control voice, amp: 0
control rrr3, rate: 0.3