define :foobar do
  with_fx :none, bits: rrand_i(2, 16), sample_rate: rrand(1000, 10000) do
    with_fx :reverb, mix: 0.125 do
#      sample :drum_heavy_kick, amp: 2
#      sample :elec_blip2
      use_synth :tb303
      play chord(:e3, :minor).choose, attack: 0, release: 0.1
      sleep 0.125
    end
  end
end

in_thread(name: :sam) do
  loop do
    foobar
  end
end