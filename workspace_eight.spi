use_synth :dsaw
sd = sample_duration :loop_amen, rate: 1.5


with_fx :wobble, mix: 0.5, phase: sd, wave: 0, invert_wave: 1, cutoff_min: 15, cutoff_max: 129 do
  loop do
    use_synth :fm
    in_thread do
      4.times do
        play 50 - 12, attack: 0, release: 0.25
        sleep sd / 4
      end
    end
    sample :loop_amen, rate: 1.5
    sleep sd
  end
end