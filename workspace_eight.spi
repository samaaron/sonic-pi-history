use_synth :dsaw
sd = sample_duration :loop_amen, rate: 1.5


with_fx :wobble, mix: 0.5, phase: sd, wave: 0, invert_wave: 1, cutoff_min: 15, cutoff_max: 129 do
  loop do
    use_synth :dsaw
    with_fx :wobble, phase: sd / 8, cutoff_max: 80 do
      play chord(:e1, :minor).choose, attack: 0, release: sd
    end
    in_thread do
      8.times do
        sample :elec_beep, rate: 0.75
        sleep sd / 8
      end
    end
    sample :loop_amen, rate: 1.5
    sleep sd
  end
end