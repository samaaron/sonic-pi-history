use_synth :prophet
use_transpose 5
use_synth_defaults release: 0.2, cutoff: lambda{rrand(60, 120)}, amp: 0.3
use_bpm 60


2.times do
  play chord(:e3, :major)
  sleep 0.25
  play chord(:e3, :major)
  sleep 0.25

  with_fx :reverb do
    with_fx :echo, delay: 0.125 do
      play chord(:a3, :major)

    end
  end

  sleep 1
end