load_samples(sample_names :drum)
define :drums do
  sync :tick
  with_fx :echo do
  sample :drum_heavy_kick, rate: 1
  sleep 1
  end
  
end

define :synths do
  wait :tick
  with_fx :slicer, rate: 8 do
  with_fx :ixi_techno, rate: 4 do
   sample :bass_drop_c,  rate: -1
  end
  end
end

in_thread(name: :drums){loop{drums}}
in_thread(name: :synths){loop{synths}}
 