# Welcome to Sonic Pi v2.0

define :n do
  :e4
end

in_thread(name: :foo) do
  loop do
    use_synth :fm
    play n, release: 0.5
    sleep 1
  end
end

in_thread(name: :bar) do
  loop do
    use_synth :prophet
    play chord(n, :minor).choose, amp: 1, cutoff: rrand(50, 120), release: 0.2
    sleep 0.125
  end
end