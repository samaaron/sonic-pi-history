use_synth :dsaw
use_bpm 240
define :pat do
  use_bpm 240
  use_transpose -12
  with_fx :reverb do
    with_fx :echo, delay: 60.0/240, decay: 1 do
      use_synth_defaults release: 0.4, attack: 0, cutoff: lambda{rrand(60, 90)}
      t = [52, 48, 50].choose
      play_pattern [55, t, 55, t, 57, t, 59, t]
    end
  end
end

#loop{pat}