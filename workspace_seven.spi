
load_sample :drum_heavy_kick

define :drums do
  sample :drum_heavy_kick, rate: 0.75
  sleep 0.5
  sample :drum_bass_hard
  sleep 0.5
end

define :synths do
  use_synth :fm
  use_synth_defaults amp: 1, mod_range: 15, attack: 0, release: 0.3, cutoff: rrand(60, 120), pulse_width: 0.5, mod_rate: 4
  play 30
  sleep 0.25
  play 38
  sleep 0.25
end

in_thread(name: :drums){loop{drums}}
in_thread(name: :synths){loop{synths}}
 